generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  name       String       @unique
  role       Role
  location   Location
  attendance Attendance[]
  report     Report[]
}

model Attendance {
  id       Int      @id @default(autoincrement())
  date     DateTime @default(now())
  user     User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   Int?
  startLog Log[]    @relation("attendanceStartLog")
  endLog   Log[]    @relation("attendanceEndLog")
}

model Log {
  id                Int         @id @default(autoincrement())
  date              DateTime    @default(now())
  latitude          Float
  longitude         Float
  attendanceStartId Int?
  attendanceStart   Attendance? @relation(name: "attendanceStartLog", fields: [attendanceStartId], references: [id], onDelete: Cascade)
  attendanceEndId   Int?
  attendanceEnd     Attendance? @relation(name: "attendanceEndLog", fields: [attendanceEndId], references: [id], onDelete: Cascade)
  images            LogImage[]

  @@unique([attendanceStartId, attendanceEndId])
}

model LogImage {
  id    Int    @id @default(autoincrement())
  url   String
  logId Int
  log   Log    @relation(fields: [logId], references: [id], onDelete: Cascade)
}

model Report {
  id          Int           @id @default(autoincrement())
  userId      Int
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  date        DateTime      @default(now())
  status      Status        @default(WAITING)
  description String?
  images      ReportImage[]
}

model ReportImage {
  id       Int    @id @default(autoincrement())
  url      String
  reportId Int
  report   Report @relation(fields: [reportId], references: [id], onDelete: Cascade)
}

enum Role {
  CLEANER
  SECURITY
  ADMIN
}

enum Location {
  GANESHA
  JATINANGOR
  CIREBON
  JAKARTA
  BOSSCHA
}

enum Status {
  WAITING
  REJECTED
  ACCEPTED
}
